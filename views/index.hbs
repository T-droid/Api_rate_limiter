<script>
    // Check if user is already logged in
    document.addEventListener('DOMContentLoaded', () => {
        const authToken = localStorage.getItem('authToken');
        const authButtons = document.querySelector('.flex.items-center.justify-end.flex-1.space-x-2');
        
        if (authToken && authButtons) {
            // User is logged in, show different buttons
            authButtons.innerHTML = `
                <a href="/dashboard" class="px-4 py-2 text-sm font-medium text-primary hover:text-primary/80">Dashboard</a>
                <button onclick="logout()" class="px-4 py-2 text-sm font-medium bg-red-600 text-white rounded-lg hover:bg-red-700">Logout</button>
            `;
        }
    });

    function logout() {
        localStorage.removeItem('authToken');
        location.reload();
    }
